{# twig template #}
{% extends 'base.html.twig' %}

{% block page_content %}

    {% embed 'layouts/right-sidebar.html.twig' %}

        {% block layout_page_title %}Page Not Found (404).{% endblock %}

        {% block layout_main_content %}
            <div class="col-12">

                <p>The page you are looking for does not exists, or has been moved or removed.</p>
                <p>Perhaps you can return to the Home page and see if you can find what you are looking for.</p>

                <a class="mt-3 btn btn-primary btn-md" role="button" href="{{ path('home') }}">Back To Home</a>

            </div>

        {% endblock %}

        {% block layout_sbr %}
            {% include 'components/forms/quote-request.html.twig' %}
            <div class="w-100 mb-3"></div>
            {% include 'components/testimonials.html.twig' %}
        {% endblock %}

    {% endembed %}

{% endblock %}